<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".SplashActivity">

    <com.github.jorgecastillo.FillableLoader
        android:id="@+id/splash_fillable_loader"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        app:fl_clippingTransform="waves"
        app:fl_fillColor="@color/primary"
        app:fl_fillDuration="1500"
        app:fl_originalHeight="512"
        app:fl_originalWidth="512"
        app:fl_strokeColor="@color/primary"
        app:fl_strokeDrawingDuration="1500"
        app:fl_strokeWidth="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_layout"
        android:layout_below="@id/splash_fillable_loader"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/splash_to_signin_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:padding="15dp"
            android:text="@string/sign_in"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/splash_to_signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:padding="15dp"
            android:text="@string/sign_up"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
